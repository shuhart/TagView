<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.shuhart.tagview.sample.MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@android:drawable/ic_input_get"
        android:drawableEnd="@android:drawable/ic_input_add"
        android:drawableLeft="@android:drawable/ic_delete"
        android:drawablePadding="16dp"
        android:drawableRight="@android:drawable/ic_input_add"
        android:drawableStart="@android:drawable/ic_delete"
        android:drawableTop="@android:drawable/ic_btn_speak_now"
        android:gravity="center_vertical"
        android:text="Hello, World!" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_media_play"
        android:tint="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:foreground="?selectableItemBackground" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/met_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:met_iconRight="@android:drawable/ic_secure" />

    <WebView

        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
